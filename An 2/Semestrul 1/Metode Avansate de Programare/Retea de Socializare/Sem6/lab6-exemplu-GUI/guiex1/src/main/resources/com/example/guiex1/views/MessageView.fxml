<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guiex1.controller.MessageController">
    <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <ListView fx:id="messageList" onMouseClicked="#handleMessageSelect" VBox.vgrow="ALWAYS">
        </ListView>
        <TextField fx:id="messageInput" promptText="Type a message..." VBox.vgrow="NEVER"/>
        <Button fx:id="sendButton" text="Send" onAction="#handleSendMessage" VBox.vgrow="NEVER"/>
    </VBox>
</AnchorPane>
